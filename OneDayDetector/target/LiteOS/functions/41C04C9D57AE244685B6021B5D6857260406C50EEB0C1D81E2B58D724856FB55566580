lv_style_list_t * lv_label_get_style(lv_obj_t * label, uint8_t type)
{
    lv_style_list_t * style_dsc_p;
    switch(type) {
        case LV_LABEL_PART_MAIN:
            style_dsc_p = &label->style_list;
            break;
        default:
            style_dsc_p = NULL;
    }

    return style_dsc_p;
}
